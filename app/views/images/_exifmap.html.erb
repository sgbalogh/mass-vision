<div id="loc_map">
  <script>
      var center = [<%= @image.exif['geo:lat'] %>, <%= @image.exif['geo:long'] %>];
      var map = L.map('loc_map').setView(center, 16);
      L.tileLayer('http://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png', {
          attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a> &copy; <a href="http://cartodb.com/attributions">CartoDB</a>',
          subdomains: 'abcd',
          maxZoom: 19,
          detectRetina: true
      }).addTo(map);

      var point = L.marker([<%= @image.exif['geo:lat'] %>, <%= @image.exif['geo:long'] %>]).addTo(map);
      point.bindPopup('<b><%= @image.exif['City'] %></b><br><%= @image.exif['Country/Primary Location Name'] %><br><br><b>lat:</b> <code><%= @image.exif['geo:lat'] %></code><br><b>long:</b> <code><%= @image.exif['geo:long'] %></code>');
  </script>
</div>